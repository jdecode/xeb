{
    "name": "jdecode/altron",
    "type": "project",
    "description": "The AI experiments",
    "keywords": ["jdecode", "altron", "AI", "experiments"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.10",
        "laravel/pennant": "^1.5",
        "laravel/sanctum": "^3.3",
        "laravel/tinker": "^2.8"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "dev-master",
        "enlightn/enlightn": "^2.7",
        "enlightn/security-checker": "^1.11",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "dev": [
            "@post-root-package-install",
            "@php artisan key:generate --ansi",
            "chmod -R 0777 storage bootstrap"
        ],
        "cghooks": "[ -f vendor/bin/cghooks ] && vendor/bin/cghooks update || echo 'cghooks not found'",
        "security-checker": "vendor/bin/security-checker security:check",
        "pint": "vendor/bin/pint app tests",
        "pre-commit": [
            "@pint",
            "@security-checker"
        ],
        "pre-push": [
            "@php artisan enlightn"
        ],
        "post-merge": [
            "composer install",
            "@php artisan migrate",
            "@php artisan db:seed"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "hooks": {
            "config": {
                "stop-on-failure": [
                    "pre-commit",
                    "pre-push"
                ]
            },
            "pre-commit": [
                "docker-compose exec -T altron-web composer run pre-commit"
            ],
            "pre-push": [
                "docker-compose exec -T altron-web composer run pre-push"
            ],
            "post-merge": [
                "docker-compose exec -T altron-web composer run post-merge"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
